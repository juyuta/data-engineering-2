<configuration>

    <!-- Set the replication factor for a single local DataNode -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>

    <!-- Configuring NameNode RPC and HTTP addresses -->
    <property>
        <name>dfs.namenode.rpc-address</name>
        <value>namenode:8020</value>
    </property>
    <property>
        <name>dfs.namenode.http-address</name>
        <value>namenode:9870</value>
    </property>

    <!-- Directories for storing data and metadata -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
    </property>
    
</configuration>
